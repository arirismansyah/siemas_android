<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DsbsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_pastel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="55dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnContainer"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_input_grey"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    >
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TableRow
                            android:layout_width="match_parent"
                            >
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="left"
                                android:padding="3dp"
                                android:text="Provinsi"
                                android:textStyle="bold"></TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/kdProv"
                                android:gravity="left"
                                android:padding="3dp"
                                android:text="16"
                                ></TextView>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent">
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="left"
                                android:padding="3dp"
                                android:text="Kabkot"
                                android:textStyle="bold"></TextView>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                >
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:id="@+id/kdKab"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="00">

                                </TextView>
                                <TextView
                                    android:id="@+id/namaKab"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="Nama Kab"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    >
                                </TextView>
                            </LinearLayout>

                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent">
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="left"
                                android:padding="3dp"
                                android:text="NKS"
                                android:textStyle="bold"></TextView>
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:id="@+id/nks"
                                android:text="00000"
                                android:gravity="left"
                                android:padding="3dp"></TextView>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent">
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="left"
                                android:padding="3dp"
                                android:text="No Urut Ruta"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:id="@+id/nuRt"
                                android:text="1"
                                android:gravity="left"
                                android:padding="3dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent">
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="left"
                                android:padding="3dp"
                                android:text="Nama KRT"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:id="@+id/namaKrt"
                                android:hint="Nama KRT"
                                android:gravity="left"
                                android:padding="3dp" >
                            </TextView>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent">
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="left"
                                android:padding="3dp"
                                android:text="Jumlah ART"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:id="@+id/jmlArt"
                                android:hint="Jumlah ART"
                                android:gravity="left"
                                android:inputType="number"
                                android:padding="3dp" >
                            </TextView>
                        </TableRow>
                    </TableLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/bg_input_grey"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="Foto Rumah"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/ivFotoRumah"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:src="@drawable/ic_image"
                        android:layout_margin="5dp"></ImageView>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/getFotoBtn"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/dark"
                        android:text="Get Foto"
                        android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/batalbtn"
                    android:padding="0dp"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button"
                    android:backgroundTint="@color/dark"
                    android:text="BATAL"
                    android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/simpanbtn"
                    android:padding="0dp"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_button"
                    android:backgroundTint="@color/orange"
                    android:text="SIMPAN"
                    android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>